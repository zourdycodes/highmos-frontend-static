*,
*::before,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-size: 62.5%;
  background: #f2f2f2;
}

.hero-area {
  /* background: rgba(0, 0, 0, 0.4); */
  background-image: linear-gradient(rgba(0, 0, 0, 0.527), rgba(0, 0, 0, 0.5)),
    url("5fc257b627618701071bee8c6784eaf1");
  background-position: center;
  background-size: cover;

  height: 105vh;

  border: 1px solid #000000;
}

/*  header  */

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 2rem;
}

.btn-reservation {
  padding: 0.9rem 1.8rem;
  background: #fe5303;
  border-radius: 3rem;
  color: white;
  font-family: Poppins;
  font-style: normal;
  font-weight: 600;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  border: none;

  box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.2);
}

.btn-reservation:hover {
  background: #fe5340;
}

.icon {
  font-size: 1.2rem;
  margin-right: 6px;
}

/* content hero */

/* .hero__content {
  
} */

.content__heading {
  color: #ffffff;
  font-family: Playfair Display;
  font-style: normal;
  font-weight: bold;
  font-size: 64px;
  line-height: 85px;
  letter-spacing: 2px;

  margin: 5rem;
  padding-right: 35rem;
}

.play {
  display: flex;
  justify-content: center;
  align-items: center;
  background: transparent;
  border: none;

  color: white;
  font-family: Poppins;
  font-style: normal;
  font-weight: 500;
  font-size: 18px;
  margin-left: 5rem;
  margin-top: -2.5rem;
}

.play-icon {
  margin-left: 3rem;

  color: #ffffff;

  font-size: 4.3rem;
  cursor: pointer;
}

.play-icon:hover {
  border: 3px solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  padding: 0.5rem;
  transition: all 0.3s;
  color: white;
}

/* booking form */

.booking__content {
  /* display: flex; */
  margin-left: 5rem;
  margin-top: 2rem;
}

.booking__inputs {
  display: flex;

  color: #000;
}

.booking__input {
  display: flex;
  flex-direction: column;
  background: #ffffff;
  padding: 1.5rem;
  padding-right: 4rem;
}

.booking__input:first-child {
  border-bottom-left-radius: 12px;
  border-top-left-radius: 12px;
}

.booking__input:nth-child(3) {
  border-bottom-right-radius: 12px;
  border-top-right-radius: 12px;
}

.booking__input:nth-child(3) {
  padding-right: 9rem;
}

.booking__input:not(:last-child) {
  border-right: 1px solid rgba(0, 0, 0, 0.2);
}

.booking__input > label {
  font-family: Poppins;
  font-style: normal;
  font-weight: bold;
  font-size: 12px;
  line-height: 18px;
  margin-top: -10px;
  margin-bottom: 1rem;
  /* identical to box height */

  text-transform: uppercase;

  color: #bdbdbd;
}

.booking__input > input {
  border: none;
  width: fit-content;
  font-family: Poppins;
  font-style: normal;
  font-weight: 600;
  font-size: 16px;
}

.booking__input > select {
  border: none;
}

.booking-btn {
  margin-left: 1rem;

  padding: 0 2.4rem;
  border: none;
  text-transform: uppercase;
  font-size: 1.5rem;
  background: #fe5303;
  box-shadow: 0px 4px 20px rgba(254, 83, 3, 0.6);
  border-radius: 12px;

  font-family: Poppins;
  font-style: normal;
  font-weight: bold;
  font-size: 16px;

  cursor: pointer;
  color: #ffffff;
}

.booking-btn:hover {
  background: rgba(254, 83, 3, 0.8);
}
